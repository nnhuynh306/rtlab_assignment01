<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xml_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_holder"
            android:textSize="@dimen/xml_file_name_text_size"
            android:padding="@dimen/xml_file_list_item_padding"
            />

        <ImageView
            android:id="@+id/tick_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/xml_file_name"
            android:layout_alignStart="@+id/xml_file_name"
            android:layout_alignTop="@+id/xml_file_name"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tick_image"
            android:src="@drawable/check_icon"
            android:visibility="visible"/>
    </RelativeLayout>

</FrameLayout>