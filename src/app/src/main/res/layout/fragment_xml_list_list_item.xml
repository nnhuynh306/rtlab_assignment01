<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/xml_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_holder"
            android:textSize="@dimen/xml_file_name_text_size"
            android:background="@drawable/layout_round_borders"
            android:padding="@dimen/xml_file_list_item_padding"
            android:layout_marginVertical="@dimen/xml_file_list_item_vertical_margin"
            android:layout_marginRight="@dimen/button_size"
            android:layout_marginEnd="@dimen/button_size" />

        <LinearLayout
            android:id="@+id/button_wrapper"
            android:layout_width="@dimen/button_size"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@+id/import_btn"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@drawable/button_bg"
                android:src="@drawable/import_icon"
                />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>